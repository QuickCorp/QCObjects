{
    "env": {
        "browser": true,
        "node": true,
        "es2021": true,
        "es2020": true,
        "es2017": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": "latest",
        "ecmaFeatures": {}
    },
    "rules": {
      "semi": ["error", "always"],
      "quotes": ["error", "double"]
    }
}
